{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "tailwindcss": {
            "type": "local",
            "command": [
                "pnpx",
                "tailwindcss-mcp-server@latest"
            ],
            "enabled": true
        },
        "nextjs": {
            "type": "local",
            "command": [
                "pnpx",
                "next-devtools-mcp@latest"
            ],
            "enabled": true
        },
        "shadcn": {
            "type": "local",
            "command": [
                "pnpx",
                "shadcn@latest",
                "mcp"
            ],
            "enabled": true
        }
    }
}
